        "22": true,
        "23": true,
        "24": true,
        "25": true
      },
      "simulator": true,
      "emulator": {
        "1.2": true,
        "2.x": true,
        "3.x": true,
        "4.x": true,
        "5.x": true,
        "6.x": true
      }
    }
  },
  "methods": [
    {
      "name": "putMediaMetaData",
      "description": "미디어 메타데이터를 데이터베이스에 저장합니다.",
      "emulatorSupport": true,
      "deprecated": false,
      "parameters": [
        {
          "name": "mediaMetaData",
          "required": true,
          "type": "object",
          "description": "저장할 미디어 메타데이터입니다."
        }
      ],
      "returns": {
        "parameters": [
          {
            "name": "returnValue",
            "type": "boolean",
            "required": true,
            "description": "요청의 성공/실패를 나타냅니다."
          }
        ]
      },
      "errors": [],
      "examples": [
        {
          "title": "미디어 메타데이터 저장",
          "code": "var request = webOS.service.request('luna://com.webos.service.mediadb', {\n  method: 'putMediaMetaData',\n  parameters: {\n    mediaMetaData: {\n      uri: '/media/videos/movie.mp4',\n      title: 'My Movie',\n      duration: 120000,\n      genre: 'Action'\n    }\n  },\n  onSuccess: function (inResponse) {\n    console.log('Media metadata saved successfully');\n  },\n  onFailure: function (inError) {\n    console.log('Save metadata failed:', inError.errorText);\n  }\n});",
          "language": "javascript"
        }
      ]
    },
    {
      "name": "getMediaMetaData",
      "description": "미디어 메타데이터를 조회합니다.",
      "emulatorSupport": true,
      "deprecated": false,
      "parameters": [
        {
          "name": "uri",
          "required": true,
          "type": "string",
          "description": "조회할 미디어 파일의 URI입니다."
        }
      ],
      "returns": {
        "parameters": [
          {
            "name": "returnValue",
            "type": "boolean",
            "required": true,
            "description": "요청의 성공/실패를 나타냅니다."
          },
          {
            "name": "mediaMetaData",
            "type": "object",
            "required": false,
            "description": "조회된 미디어 메타데이터입니다."
          }
        ]
      },
      "errors": [],
      "examples": [
        {
          "title": "미디어 메타데이터 조회",
          "code": "var request = webOS.service.request('luna://com.webos.service.mediadb', {\n  method: 'getMediaMetaData',\n  parameters: {\n    uri: '/media/videos/movie.mp4'\n  },\n  onSuccess: function (inResponse) {\n    console.log('Media metadata:', inResponse.mediaMetaData);\n  },\n  onFailure: function (inError) {\n    console.log('Get metadata failed:', inError.errorText);\n  }\n});",
          "language": "javascript"
        }
      ]
    }
  ],
