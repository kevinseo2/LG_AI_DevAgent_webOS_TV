{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "webOS TV API Documentation Schema",
  "description": "webOS TV API 문서화를 위한 JSON 스키마",
  "type": "object",
  "properties": {
    "apiInfo": {
      "type": "object",
      "properties": {
        "serviceName": {
          "type": "string",
          "description": "서비스명 (예: Activity Manager)"
        },
        "serviceUri": {
          "type": "string",
          "description": "Luna 서비스 URI (예: luna://com.palm.activitymanager)"
        },
        "category": {
          "type": "string",
          "enum": ["system", "media", "device", "app", "network", "ui"],
          "description": "API 카테고리"
        },
        "description": {
          "type": "string",
          "description": "서비스 개요 설명"
        },
        "version": {
          "type": "string",
          "description": "API 버전"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date",
          "description": "마지막 업데이트 날짜"
        }
      },
      "required": ["serviceName", "serviceUri", "description"]
    },
    "methods": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "메서드명"
          },
          "description": {
            "type": "string",
            "description": "메서드 설명"
          },
          "emulatorSupport": {
            "type": "boolean",
            "description": "에뮬레이터 지원 여부"
          },
          "deprecated": {
            "type": "boolean",
            "description": "deprecated 여부"
          },
          "parameters": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "required": {
                  "type": "boolean"
                },
                "type": {
                  "type": "string",
                  "enum": ["string", "number", "boolean", "object", "array"]
                },
                "description": {
                  "type": "string"
                },
                "defaultValue": {
                  "description": "기본값"
                },
                "enum": {
                  "type": "array",
                  "description": "허용되는 값들의 열거"
                }
              },
              "required": ["name", "required", "type", "description"]
            }
          },
          "returns": {
            "type": "object",
            "properties": {
              "parameters": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "required": {
                      "type": "boolean"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                }
              },
              "subscription": {
                "type": "object",
                "description": "구독 응답 정보"
              }
            }
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "code": {
                  "type": ["number", "string"]
                },
                "message": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "code": {
                  "type": "string"
                },
                "language": {
                  "type": "string",
                  "enum": ["javascript", "json"]
                }
              }
            }
          }
        },
        "required": ["name", "description", "parameters", "returns"]
      }
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "properties": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "required": {
                  "type": "boolean"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "vscodeExtension": {
      "type": "object",
      "description": "VS Code 확장을 위한 추가 메타데이터",
      "properties": {
        "snippets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "prefix": {
                "type": "string"
              },
              "body": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "description": {
                "type": "string"
              }
            }
          }
        },
        "completionItems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "kind": {
                "type": "string"
              },
              "documentation": {
                "type": "string"
              },
              "insertText": {
                "type": "string"
              },
              "detail": {
                "type": "string"
              }
            }
          }
        },
        "diagnostics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string"
              },
              "checks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "field": {
                      "type": "string"
                    },
                    "validValues": {
                      "type": "array"
                    },
                    "required": {
                      "type": "boolean"
                    },
                    "type": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["apiInfo", "methods"]
}
