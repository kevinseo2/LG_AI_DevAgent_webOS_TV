      "deprecated": false,
      "parameters": [
        {
          "name": "subscribe",
          "required": false,
          "type": "boolean",
          "description": "상태 변경 구독 여부",
          "defaultValue": false
        }
      ],
      "returns": {
        "parameters": [
          {
            "name": "returnValue",
            "type": "boolean",
