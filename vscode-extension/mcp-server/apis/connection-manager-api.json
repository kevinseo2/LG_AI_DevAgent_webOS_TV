            "description": "요청 성공 여부"
          },
          {
            "name": "isInternetConnectionAvailable",
            "type": "boolean",
            "required": true,
            "description": "인터넷 연결 가능 여부"
          },
          {
            "name": "connectedViaWifi",
            "type": "boolean",
            "required": false,
            "description": "Wi‑Fi 연결 여부"
          },
          {
            "name": "connectedViaEthernet",
            "type": "boolean",
            "required": false,
            "description": "이더넷 연결 여부"
          }
        ]
      },
      "errors": [],
      "examples": [
        {
          "title": "연결 상태 조회",
          "code": "webOS.service.request('luna://com.webos.service.connectionmanager', {\n  method: 'getStatus',\n  parameters: { subscribe: true },\n  onSuccess: function (inResponse) {\n    console.log('Internet available:', inResponse.isInternetConnectionAvailable);\n  }\n});",
          "language": "javascript"
        }
      ]
    }
